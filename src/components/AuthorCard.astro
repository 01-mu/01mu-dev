---
const {
  showLinks = true,
  showHandle = false,
} = Astro.props;
---

<div class="author-card">
  <div class="author-header">
    <img src="/mu-icon.png" alt="" class="author-icon" />
    <div class="author-meta">
      <div class="author-name">01-mu</div>
      {showHandle && <div class="author-handle">@01mu_dev</div>}
      {showLinks && (
        <div class="author-links">
          <a
            href="https://x.com/01mu_dev"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="X"
          >
            <svg viewBox="0 0 24 24" aria-hidden="true">
              <path
                fill="currentColor"
                d="M14.234 10.162 22.977 0h-2.072l-7.591 8.824L7.251 0H.258l9.168 13.343L.258 24H2.33l8.016-9.318L16.749 24h6.993zm-2.837 3.299-.929-1.329L3.076 1.56h3.182l5.965 8.532.929 1.329 7.754 11.09h-3.182z"
              />
            </svg>
          </a>
          <a
            href="https://github.com/01-mu"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitHub"
          >
            <svg viewBox="0 0 24 24" aria-hidden="true">
              <path
                fill="currentColor"
                d="M12 2.2a9.8 9.8 0 0 0-3.1 19.1c.5.1.7-.2.7-.5v-1.8c-2.8.6-3.4-1.2-3.4-1.2-.4-1.1-1.1-1.4-1.1-1.4-.9-.6.1-.6.1-.6 1 .1 1.5 1 1.5 1 .9 1.5 2.5 1.1 3.1.8.1-.6.4-1.1.7-1.3-2.2-.3-4.5-1.1-4.5-5a3.9 3.9 0 0 1 1-2.7c-.1-.2-.4-1.2.1-2.5 0 0 .9-.3 2.8 1a9.6 9.6 0 0 1 5.1 0c1.9-1.3 2.8-1 2.8-1 .5 1.3.2 2.3.1 2.5a3.9 3.9 0 0 1 1 2.7c0 4-2.3 4.7-4.5 5 .4.3.8 1 .8 2.1v3.1c0 .3.2.6.7.5A9.8 9.8 0 0 0 12 2.2Z"
              />
            </svg>
          </a>
          <a
            href="https://zenn.dev/01mu"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Zenn"
          >
            <svg viewBox="0 0 24 24" aria-hidden="true">
              <path
                fill="currentColor"
                d="M.264 23.771h4.984c.264 0 .498-.147.645-.352L19.614.874c.176-.293-.029-.645-.381-.645h-4.72c-.235 0-.44.117-.557.323L.03 23.361c-.088.176.029.41.234.41zM17.445 23.419l6.479-10.408c.205-.323-.029-.733-.41-.733h-4.691c-.176 0-.352.088-.44.235l-6.655 10.643c-.176.264.029.616.352.616h4.779c.234-.001.468-.118.586-.353z"
              />
            </svg>
          </a>
          <a href="/rss.xml" aria-label="RSS" class="rss-icon">
            <svg viewBox="0 0 24 24" aria-hidden="true">
              <path
                fill="currentColor"
                d="M6.2 17.8a2 2 0 1 1-4 0 2 2 0 0 1 4 0ZM2.2 10.4v3.1c4.3 0 7.8 3.5 7.8 7.8h3.1c0-6-4.9-10.9-10.9-10.9Zm0-6.7v3.1c8 0 14.5 6.5 14.5 14.5h3.1c0-9.7-7.9-17.6-17.6-17.6Z"
              />
            </svg>
          </a>
        </div>
      )}
    </div>
  </div>
</div>

<style>
  .author-card {
    display: grid;
    gap: 0.35rem;
    justify-items: start;
    text-align: left;
    --author-size: 100px;
  }

  .author-header {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .author-icon {
    width: var(--author-size);
    height: var(--author-size);
    border-radius: 12px;
    border: 1px solid var(--border);
    background: var(--bg-paper);
  }

  .author-meta {
    text-align: left;
  }

  .author-name {
    font-weight: 600;
  }


  .author-links {
    display: flex;
    gap: 0.65rem;
    margin-top: 0.35rem;
    justify-content: flex-start;
  }

  .author-links a {
    width: 18px;
    height: 18px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: var(--muted);
    transition: color 160ms ease;
  }

  .author-links a:hover {
    color: var(--ink);
  }

  .author-links svg {
    width: 16px;
    height: 16px;
  }

  .author-links .rss-icon svg {
    width: 20px;
    height: 20px;
  }

  @media (max-width: 720px) {
    .author-card {
      margin-inline: auto;
      min-width: 240px;
      width: fit-content;
      align-self: center;
    }

    .author-header {
      flex-direction: row;
      align-items: center;
    }

    .author-meta {
      text-align: left;
    }

    .author-links {
      justify-content: flex-start;
    }
  }
</style>
