---
const { title, class: className } = Astro.props;
---

<section class:list={["mdx-decision", className]}>
  {title && <p class="mdx-decision__title">{title}</p>}
  <slot />
</section>

<style>
  .mdx-decision {
    margin: 1.25rem 0;
    padding: 0.75rem 1rem;
    border-radius: 6px;
    border: 1px solid var(--border);
    background: rgba(28, 42, 51, 0.03);
    color: var(--muted);
    font-size: 0.95rem;
  }

  .mdx-decision__title {
    margin: 0 0 0.5rem;
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--ink);
  }
</style>
