---
import "../../styles/mdx-boxes.css";

// Sample component for MDX helper styling.
const { title, class: className } = Astro.props;
---

<section class:list={["mdxbox", "mdxbox--decision", className]}>
  <div class="mdxbox__icon" aria-hidden="true">
    <svg viewBox="0 0 24 24" role="img">
      <path d="M7 4.5h10a1 1 0 0 1 1 1v14l-6-3-6 3v-14a1 1 0 0 1 1-1Z" />
    </svg>
  </div>
  <div class="mdxbox__body">
    {title && <div class="mdxbox__title">{title}</div>}
    <slot />
  </div>
</section>
