---
import "../../styles/mdx-boxes.css";

// Sample component for MDX helper styling.
const { class: className } = Astro.props;
---

<section class:list={["mdxbox", "mdxbox--wip", className]}>
  <div class="mdxbox__icon" aria-hidden="true">
    <svg viewBox="0 0 24 24" role="img" class="mdxbox__icon--fill">
      <circle cx="6" cy="12" r="1.5" />
      <circle cx="12" cy="12" r="1.5" />
      <circle cx="18" cy="12" r="1.5" />
    </svg>
  </div>
  <div class="mdxbox__body">
    <slot />
  </div>
</section>
