---
import "../styles/global.css";

const { title, description, mainClass = "main--page" } = Astro.props;
const siteTitle = "mu -> bit";
const siteTagline = "Designing systems from nothing(mu / 無).";
const pageTitle = title ? `${title} · ${siteTitle}` : siteTitle;
const pageDescription = description ?? siteTagline;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500&family=Source+Serif+4:opsz,wght@8..60,400;8..60,500;8..60,600&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <header class="site-header">
      <div class="site-brand">
        <a href="/" class="site-title-link" aria-label="mu to bit">
          {siteTitle}
        </a>
        <div class="site-tagline">{siteTagline}</div>
      </div>
      <nav class="site-nav">
        <a href="/">Home</a>
        <a href="/about">About</a>
        <a href="/tags">Tags</a>
      </nav>
    </header>
    <main class={mainClass}>
      <slot />
    </main>
    <footer>
      <span>Quiet notes for long-form thinking.</span>
    </footer>
  </body>
</html>

<style>
  main {
    margin: 0 auto;
    max-width: 76ch;
    padding: 3.5rem 1.5rem 3.2rem;
    background: var(--bg-paper);
    min-height: 70vh;
    flex: 1;
  }

  .main--post {
    max-width: none;
    background: transparent;
    padding: 1.5rem 0 3.2rem;
  }

  .main--home {
    max-width: none;
    background: transparent;
    padding: 1.5rem 0 3.2rem;
  }

  .main--page {
    max-width: none;
    padding: 1.5rem 0 3.2rem;
  }

  .site-header {
    width: 100%;
    max-width: none;
    margin: 0;
    padding: 1.2rem 2rem 0;
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 1rem;
  }

  .site-brand {
    padding-bottom: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.06rem;
    text-align: left;
  }

  .site-title {
    font-size: 1.35rem;
    font-weight: 600;
    letter-spacing: 0.01em;
  }

  .site-tagline {
    font-size: 0.95rem;
    color: var(--muted);
  }

  .site-title-link {
    font-size: 1.8rem;
    font-weight: 600;
    letter-spacing: 0.01em;
  }

  .site-nav {
    display: flex;
    gap: 1rem;
    font-size: 0.95rem;
    justify-content: flex-end;
  }

  header .logo {
    font-weight: 600;
    letter-spacing: 0.01em;
  }

  footer {
    max-width: 76ch;
    margin: 0 auto 2.5rem;
    padding: 0 1.5rem;
    color: var(--muted);
    font-size: 0.85rem;
    text-align: center;
  }

  @media (max-width: 720px) {
    main {
      padding: 2.5rem 1.25rem 2.8rem;
    }

    .main--post {
      padding: 2.5rem 0 2.8rem;
    }

    .main--home {
      padding: 1.2rem 0 2.8rem;
    }

    .main--page {
      padding: 1.2rem 0 2.8rem;
    }

    .site-header {
      padding: 1.25rem 1.5rem 0;
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }

    .site-nav {
      flex-wrap: wrap;
      justify-content: flex-start;
    }

    .site-brand {
      text-align: left;
    }

    .site-title-link {
      justify-self: start;
    }
  }
</style>
