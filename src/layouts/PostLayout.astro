---
import BaseLayout from "./BaseLayout.astro";
import TableOfContents from "../components/TableOfContents.astro";
import AuthorCard from "../components/AuthorCard.astro";

const {
  title,
  date,
  tags = [],
  description,
  headings = [],
  tagCounts = {},
} = Astro.props;
const formattedDate = new Date(date).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<BaseLayout title={title} description={description} mainClass="main--post">
  <div class="post-layout">
    <article class="post-content">
      <p class="prose-meta">{formattedDate}</p>
      <h1 class="page-title">{title}</h1>
      {tags.length > 0 && (
        <div class="tag-list">
          {tags.map((tag) => (
            <a class="tag-pill" href={`/tags/${encodeURIComponent(tag)}`}>{tag}</a>
          ))}
        </div>
      )}
      <slot />
    </article>
    <aside class="post-toc">
      <AuthorCard />
      {tags.length > 0 && (
        <div class="tag-card">
          <p class="tag-card-title">Tags</p>
          <div class="tag-list">
            {tags.map((tag) => (
              <a class="tag-pill" href={`/tags/${encodeURIComponent(tag)}`}>
                {tag} {tagCounts[tag] ? `(${tagCounts[tag]})` : ""}
              </a>
            ))}
          </div>
        </div>
      )}
      <div class="sidebar-divider" aria-hidden="true"></div>
      <div class="toc-panel" id="mobile-toc-panel">
        <TableOfContents headings={headings} />
      </div>
      <div class="toc-inline">
        <TableOfContents headings={headings} />
      </div>
    </aside>
  </div>
  <button class="toc-toggle" type="button" aria-controls="mobile-toc-panel" aria-expanded="false">
    <svg viewBox="0 0 24 24" aria-hidden="true" class="toc-icon">
      <path
        fill="currentColor"
        d="M4 6.5h16v2H4v-2Zm0 5h10v2H4v-2Zm0 5h13v2H4v-2Z"
      />
    </svg>
    Contents
  </button>
</BaseLayout>

<style>
  .post-layout {
    display: grid;
    grid-template-columns: minmax(0, 1fr) minmax(0, 82ch) 220px minmax(0, 1fr);
    gap: 2.5rem;
    align-items: start;
  }

  .post-content {
    min-width: 0;
    grid-column: 2;
    background: var(--bg-paper);
    padding: 2.5rem 2.75rem 2.6rem;
  }

  .post-toc {
    position: sticky;
    top: 5.5rem;
    align-self: start;
    grid-column: 3;
    display: flex;
    flex-direction: column;
  }

  .toc-panel {
    display: none;
  }

  .toc-toggle {
    display: none;
  }

  .sidebar-divider {
    height: 1px;
    background: var(--border);
    margin: 1.5rem 0 1.25rem;
  }

  .tag-card {
    margin-top: 1.2rem;
    display: grid;
    gap: 0.5rem;
  }

  .tag-card-title {
    font-size: 0.8rem;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    color: var(--muted);
    margin: 0;
  }

  @media (max-width: 720px) {
    .post-layout {
      display: flex;
      flex-direction: column;
    }

    .post-content {
      grid-column: auto;
      order: 1;
      padding: 2rem 1.5rem 2.25rem;
    }

    .post-toc {
      grid-column: auto;
      order: 2;
      margin-top: 1.5rem;
      position: static;
    }

    .tag-card {
      display: none;
    }

    .toc-panel {
      position: fixed;
      display: none;
      top: 4.5rem;
      right: 1rem;
      left: 1rem;
      max-height: 60vh;
      overflow: auto;
      background: var(--bg-paper);
      border: 1px solid var(--border);
      border-radius: 10px;
      padding: 1rem;
      box-shadow: 0 12px 30px rgba(28, 42, 51, 0.15);
      z-index: 20;
    }

    .toc-toggle {
      display: inline-flex;
    }

    :global(body.toc-open) .toc-panel {
      display: block;
    }

    .toc-inline {
      display: none;
    }
  }

  .toc-inline {
    display: block;
  }

  .toc-icon {
    width: 16px;
    height: 16px;
  }

  .toc-toggle {
    position: fixed;
    top: 1rem;
    right: 1rem;
    z-index: 21;
    align-items: center;
    gap: 0.35rem;
    padding: 0.45rem 0.75rem;
    border-radius: 999px;
    border: 1px solid var(--border);
    background: var(--bg-paper);
    color: var(--ink);
    font-size: 0.85rem;
  }
</style>

<script>
  const toggle = document.querySelector(".toc-toggle");
  const panel = document.querySelector("#mobile-toc-panel");

  if (toggle && panel) {
    const update = (open) => {
      document.body.classList.toggle("toc-open", open);
      toggle.setAttribute("aria-expanded", open ? "true" : "false");
    };

    toggle.addEventListener("click", () => {
      const open = document.body.classList.contains("toc-open");
      update(!open);
    });

    panel.addEventListener("click", (event) => {
      const target = event.target;
      if (target instanceof Element && target.closest("[data-toc-link]")) {
        update(false);
      }
    });
  }
</script>
