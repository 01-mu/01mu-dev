---
import BaseLayout from "../layouts/BaseLayout.astro";
import AuthorCard from "../components/AuthorCard.astro";
---

<BaseLayout title="About" mainClass="main--home">
  <div class="home-layout">
    <section class="home-content">
      {/*
        Reserve the "about-icon" slot for future section numbering once the About
        page grows. Please ask before re-enabling or repurposing this element.
      */}
      {/* <div class="about-icon" aria-hidden="true">01</div> */}
      <h1 class="page-title">About</h1>
      <p>
        I write in English to slow down my thinking and leave room for nuance. This
        space is for long-form notes, reflections, and careful observations.
      </p>
      <p>
        The goal is simple: a quiet place where the writing can breathe, without
        distractions or urgency.
      </p>
    </section>
    <aside class="home-sidebar">
      <AuthorCard />
    </aside>
  </div>
</BaseLayout>

<style>
  .about-icon {
    width: 42px;
    height: 42px;
    border-radius: 999px;
    border: 1px solid var(--border);
    display: grid;
    place-items: center;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  .home-layout {
    display: grid;
    grid-template-columns: minmax(0, 1fr) minmax(0, 82ch) 220px minmax(0, 1fr);
    gap: 2.5rem;
    align-items: start;
  }

  .home-content {
    min-width: 0;
    grid-column: 2;
    background: var(--bg-paper);
    padding: 2.5rem 2.75rem 2.6rem;
  }

  .home-sidebar {
    align-self: start;
    grid-column: 3;
  }

  @media (max-width: 720px) {
    .home-layout {
      grid-template-columns: minmax(0, 1fr);
      display: flex;
      flex-direction: column;
    }

    .home-sidebar {
      width: 100%;
      display: block;
      order: 2;
      margin-top: 1.5rem;
      display: flex;
      justify-content: center;
    }

    .home-content {
      grid-column: auto;
      order: 1;
      padding: 2rem 1.5rem 2.25rem;
    }
  }
</style>
